<div>
  <% if @story.present? %>
    <div class="text-2xl">
      <%= simple_format(@story, class: "mb-5") %>
    </div>
  <% else %>
    <h1 class="font-bold text-4xl mb-10">Crie uma nova hist√≥ria</h1>
    <%= form_with method: :get, class: "max-w-sm" do |form| %>
      <div class="mb-5">
        <%= form.label :age, "Idade" %>
        <%= form.number_field :age, class: "dark:bg-slate-800 rounded dark:border-white w-full", max: 10, min: 2, value: 4 %>
      </div>
      <div class="mb-5">
        <%= form.label :words, "Palavras" %>
        <%= form.select :words, @words, {}, class: "dark:bg-slate-800 rounded dark:border-white w-full", multiple: true, max: 3 %>
      </div>
      <div>
        <%= form.submit "Criar", class: "dark:bg-cyan-700 p-2 cursor-pointer rounded w-full" %>
      </div>
    <% end %>
  <% end %>
</div>
